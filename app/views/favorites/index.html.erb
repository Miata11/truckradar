<<div class="container">
  <h1>Vos Favoris</h1>

  <% if @favorites.any? %>
    <div class="row justify-content-center">
      <% @favorites.each do |favorite| %>
        <div class="col-md-6 col-lg-4 mb-3">
          <div class="card shadow-sm">
            <div class="card-body d-flex justify-content-between align-items-center">
              <!-- Nom du foodtruck avec lien -->
              <%= link_to favorite.foodtruck.name, foodtruck_path(favorite.foodtruck), class: "text-decoration-none fw-bold" %>

              <!-- Icône du cœur rouge pour supprimer le favori -->
              <%= button_to foodtruck_favorite_path(favorite.foodtruck, current_user.favorites.find_by(foodtruck: favorite.foodtruck)), method: :delete, class: "p-0 border-0 bg-transparent" do %>
                <i class="fas fa-heart text-danger" style="font-size: 1.5rem;"></i>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p>Vous n'avez encore aucun favori.</p>
  <% end %>
</div>
