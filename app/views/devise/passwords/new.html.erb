<div class="mot-de-passe-oublie">
  <h2>Mot de passe oublié ?</h2>

  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "formulaire-mot-de-passe-oublie" }) do |f| %>
    <%= f.error_notification %>

    <div class="champs-formulaire-mot-de-passe-oublie">
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
    </div>

    <div class="actions-formulaire-mot-de-passe-oublie">
      <%= f.button :submit, "Réinitialiser", class: "btn-mot-de-passe-oublie" %>
    </div>

    <div class="form-buttons">
      <%= link_to "Se connecter", new_session_path(resource_name), class: "btn-form" %>
      <%= link_to "Créer un compte", new_registration_path(resource_name), class: "btn-form" %>
    </div>
    
  <% end %>


</div>
