<div class="log-in">
  <div class="form-container-log-in">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs-log-in">
        <p>Connexion</p>
        <div class="separator-new-profil"></div>

        <div class="form-group">
          <%= f.input :email, required: true, autofocus: true, input_html: { autocomplete: "email" }, label: "Adresse email" %>
        </div>

        <div class="form-group">
          <%= f.input :password, required: true, input_html: { autocomplete: "current-password" }, label: "Mot de passe" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <%= f.input :remember_me, as: :boolean, label: "Se souvenir de moi" %>
        <% end %>

        <div class="form-actions">
          <%= f.button :submit, "Se connecter", class: "btn-log-in" %>
        </div>

        <div class="form-links-log-in">
          <%= link_to "S'inscrire", new_registration_path(resource_name), class: "btn-log-in" %>
          <%= link_to "Mot de passe oubliÃ© ?", new_password_path(resource_name), class: "btn-log-in" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
