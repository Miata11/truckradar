<div class="container">
<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, required: true, autofocus: true %>
    <%= f.input :first_name, required: true, placeholder: "Entrez votre prénom" %>
    <%= f.input :last_name, required: true, placeholder: "Entrez votre nom de famille" %>
    <%= f.input :address_default, required: false, placeholder: "Entrez votre nouvelle adresse" %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :password,
                hint: "Laisse vide si tu ne souhaites pas changer",
                required: false,
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :password_confirmation,
                required: false,
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :current_password,
                hint: "Nous avons besoin de ton mot de passe actuel pour valider le changement",
                required: true,
                input_html: { autocomplete: "current-password" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Mettre à jour" %>
  </div>
<% end %>

<div>
  <%=link_to "Me deconnecter", destroy_user_session_path, method: :delete, data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to sign out?" } %>
</div>

<div>Unhappy? <%= button_to "Supprimer mon compte", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete %></div>

<%= link_to "Retour", :back %>
