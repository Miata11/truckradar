<div class="fav-card" style="width: 100px; height: 120px; box-shadow: none;">
  <%= link_to foodtruck_path(foodtruck), class: "fav-card-link" do %>
    <div class="fav-image">
      <% if foodtruck.photo.attached? %>
        <%= cl_image_tag foodtruck.photo.key,
              class: "fav-background-image",
              width: 100,
              height: 60,
              crop: :fill,
              gravity: :auto %>
      <% else %>
        <%= image_tag "foodtruck_disconnected.png",
              class: "fav-background-image",
              alt: "Image par dÃ©faut" %>
      <% end %>
    </div>

    <div class="fav-details">
      <h3 class="fav-name"><%= foodtruck.name %></h3>
      <div class="fav-categories">
        <% foodtruck.categories.each do |category| %>
          <span class="category-tag"><%= category %></span>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
