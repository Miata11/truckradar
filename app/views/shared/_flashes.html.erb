<% if notice %>
  <div class="flash--container flash--notice alert alert-dismissible fade show" role="alert">
    <div class="flash__content">
      <i class="fas fa-check-circle"></i>
      <p><%= notice %></p>
    </div>
    <button type="button" class="flash__close" data-bs-dismiss="alert" aria-label="Close">
      <i class="fas fa-times"></i>
    </button>
  </div>
<% end %>

<% if alert %>
  <div class="flash--container flash--alert alert alert-dismissible fade show" role="alert">
    <div class="flash__content">
      <i class="fas fa-exclamation-circle"></i>
      <p><%= alert %></p>
    </div>
    <button type="button" class="flash__close" data-bs-dismiss="alert" aria-label="Close">
      <i class="fas fa-times"></i>
    </button>
  </div>
<% end %>
