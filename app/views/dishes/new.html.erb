<div class="container mt-4">
  <h1>Ajouter un Plat à <%= @foodtruck.name %></h1>

  <%= form_with model: [@foodtruck, @dish], local: true, class: "mt-4" do |f| %>
    <div class="mb-3">
      <%= f.label :title, "Nom du plat", class: "form-label" %>
      <%= f.text_field :title, class: "form-control", placeholder: "Ex: Burger", required: true %>
    </div>

    <div class="mb-3">
      <%= f.label :description, "Description du plat", class: "form-label" %>
      <%= f.text_area :description, class: "form-control", placeholder: "Ex: Pain toasté, brebis, tomate", rows: 3, required: true %>
    </div>

    <div class="mb-3">
      <%= f.label :price, "Prix (€)", class: "form-label" %>
      <%= f.number_field :price, step: 0.01, class: "form-control", placeholder: "Ex: 5.00", required: true %>
    </div>

    <%= f.submit "Créer le plat", class: "btn btn-primary" %>
  <% end %>
</div>
